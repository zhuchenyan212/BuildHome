/**app.wxss**/
@import "/pages/component/getInfo.wxss";

page {
  color: #333;
  font-family: PingFangSC-Regular, sans-serif, PingFang-SC-Medium, PingFang SC;
  height: 100%;
}

.clear:after {
  content: '';
  display: block;
  clear: both;
}

.clear {
  zoom: 1;
}

.margin {
  margin: 0 auto;
}

.left {
  float: left;
}

.right {
  float: right;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.font {
  font-weight: bold;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

.clamp {
  display: flex;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
}

/*flex垂直居中对其 */
.align-center-vertical{
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}

.flex {
  display: flex;
}

.text {
  text-align: center;
}

.color-3 {
  color: #333;
}

.color-6 {
  color: #666;
}

.color-9 {
  color: #999;
}

.ft-10 {
  font-size: 10px;
}

.ft-11 {
  font-size: 11px;
}

.ft-12 {
  font-size: 12px;
}

.ft-13 {
  font-size: 13px;
}

.ft-14 {
  font-size: 14px;
}

.ft-15 {
  font-size: 15px;
}

.ft-16 {
  font-size: 16px;
}

.ft-17 {
  font-size: 17px;
}

.ft-18 {
  font-size: 18px;
}

.ft-19 {
  font-size: 19px;
}

.ft-20 {
  font-size: 20px;
}

view,
text,
input,
button {
  box-sizing: border-box;
}
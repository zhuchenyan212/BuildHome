/* pages/category/service.wxss */
@import "../wxParse/wxParse.wxss";

page {
  background: #f5f5f7;
}

swiper {
  height: 365px;
}

.container .swiper-slider image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.container .catagory {
  height: 468rpx;
  padding: 0 24rpx;
  background: #fff;
  margin-top: 15rpx;
  margin-bottom: 140rpx;
}

.container .catagory .floor_box {
  padding: 0 26rpx;
}

.container .catagory .floor_box  .title {
  padding-top: 10px;
  padding-bottom: 10px;
}

.container .catagory .p_box {
  padding-top: 4rpx;
}

.line {
  color: #707070;
}

.container .catagory .p_box .formitem {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 10px;
}

.container .catagory .p_box .formitem .tit {
  width: 50px;
}

.container .catagory .p_box .formitem input {
  width: 100%;
  height: 70rpx;
  background: #f2f2f2;
  margin-left: 8px;
  border-radius: 5px;
  border: 1px solid rgba(222, 219, 217, 1);
  padding-left: 20rpx;
}

.container .catagory .p_box button {
  width: 68%;
  height: 38px;
  line-height: 38px;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
  border-radius: 5px;
  font-size: 16px;
  margin-left: 58px;
  margin-top: 20px;
}

.container .serviceWrap {
  height: auto;
  padding: 0 12px;
  background: #fff;
}

.container .serviceWrap .serviceTitle {
  font-size: 14px;
  color: #342b2b;
  padding-top: 10px;
  padding-bottom: 10px;
}

.container .serviceWrap .serviceContent {
  font-size: 12px;
  color: #8f8f8f;
  line-height: 20px;
}

.container .serviceWrap .serviceInfo {
  font-size: 14px;
  color: #dc7f20;
  padding-top: 5px;
  padding-bottom: 8px;
}

.container .youhui {
  width: 94%;
  height: 45px;
  line-height: 45px;
  color: #342b2b;
  background: #fff;
  margin-top: 10px;
  padding: 0 12px;
}

.container .youhui text {
  font-size: 10px;
  color: #dc7f20;
  padding-left: 10px;
  font-weight: normal;
}

.container .youhui .c2 {
  font-size: 30px;
  color: #c5c2c2;
}

.container .fuwuDetail {
  background: #fff;
}

.container .fuwuDetail image {
  width: 100%;
  height: 420px;
}

.dc {
  color: #dc7f20;
}

.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 116rpx;
  background: white;
  z-index: 999;
}

.bottom_line {
  width: 54%;
  display: flex;
  align-items: center;
  float: left;
  background-color: #fff;
  z-index: 1;
  height: 116rpx;
}

.otherUse {
  width: 50%;
  height: 116rpx;
  text-align: center;
  box-sizing: border-box;
}

.otherUse view {
  line-height: 35rpx;
  font-size: 22rpx;
  color: #666;
  overflow: hidden;
}

.otherUse image {
  width: 44rpx;
  height: 44rpx;
  margin-top: 6px;
}

.button-red {
  background-color: #dc7f20; /* 红色 */
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 28rpx;
  border-radius: 0rpx;
  width: 46%;
  height: 116rpx;
  line-height: 116rpx;
}

/* pages/store/detail.wxss */

page {
  background: #f5f5f5;
}

.searchwrap {
  width: 100%;
  padding: 22rpx 24rpx;
  background: #fff;
  margin-bottom: 2rpx;
}

.index_search_btn {
  height: 64rpx;
  background-color: #ebebeb;
  color: #8f8f8f;
  font-size: 28rpx;
  text-align: left;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-radius: 70rpx;
  padding-left: 28rpx;
}

.index_search {
  margin-right: 6rpx;
  width: 32rpx;
  height: 32rpx;
}

.brand {
  width: 100%;
  height: 154rpx;
  background: #fff;
  padding: 18rpx 32rpx;
}

.brand image {
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.brand_name {
  color: #342b2b;
  font-size: 28rpx;
  font-weight: bold;
  padding-top: 18rpx;
  padding-left: 148rpx;
}

.brand_info {
  color: #8f8f8f;
  font-size: 24rpx;
  padding-left: 148rpx;
}

.prowrap {
  background: #fff;
  padding: 18rpx 14rpx;
  margin: 18rpx 18rpx;
}

.prowrap .proimg {
  width: 120rpx;
  height: 120rpx;
  float: left;
}

.pro_name {
  color: #342b2b;
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 148rpx;
}

.pro_info {
  color: #8f8f8f;
  font-size: 24rpx;
  padding-left: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.pro-choose {
  padding-left: 148rpx;
  height: 45rpx;
  margin-top: 12rpx;
}

.moeny {
  color: #dc7f20;
  font-size: 24rpx;
}

.pro-choose .right image {
  width: 38rpx;
  height: 38rpx;
}

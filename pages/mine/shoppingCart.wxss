/* pages/mine/shoppingCart.wxss */

page {
  background: #f5f5f7;
  margin-top: 10rpx;
}

.scroll {
  margin-bottom: 120rpx;
}

.cart_container {
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-bottom: 10rpx;
}

.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 65rpx;
  margin-left: 20rpx;
}

.item-image {
  width: 140rpx;
  height: 140rpx;
  margin: 15rpx;
}

.column {
  height: 70rpx;
  margin: 10rpx;
  line-height: 30rpx;
  width: 65%;
  position: relative;
}

.title {
  font-size: 28rpx;
  color: #342b2b;
  height: 90rpx;
  display: block;
  overflow: hidden;
  width: 90%;
}

.deletproduct {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}

.deletproduct image {
  width: 36rpx;
  height: 36rpx;
}

.row {
  line-height: 60rpx;
}

.sku-price {
  color: #dc7f20;
  font-size: 26rpx;
  float: left;
}

.pd {
  margin-top: 10rpx;
}

.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 125rpx;
  line-height: 125rpx;
  background: white;
}

.rows {
  line-height: 125rpx;
}

.item-allselect {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 46rpx;
  float: left;
}

.small_text {
  font-size: 24rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
  color: #8f8f8f;
}

.heji {
  font-size: 24rpx;
  color: #8f8f8f;
  padding-left: 160rpx;
}

.price {
  position: relative;
  font-size: 32rpx;
  color: #dc7f20;
}

.button-red {
  background-color: #dc7f20; /* 红色 */
}

button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 40rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 125rpx;
  line-height: 125rpx;
}

/* 购物车数量加减操作 */

.btn-box {
  width: 240rpx;
  height: 46rpx;
  font-size: 28rpx;
}

.num {
  float: left;
  width: 118rpx;
  height: 45rpx;
  min-height: 45rpx;
  line-height: 40rpx;
  background: #fff;
  text-align: center;
  border: 1rpx solid #dedbd9;
}

.operate {
  width: 60rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #dedbd9;
  text-align: center;
  float: left;
}

.leftB {
  border-radius: 8px 0 0 8px;
}

.rightB {
  border-radius: 0 8px 8px 0;
}

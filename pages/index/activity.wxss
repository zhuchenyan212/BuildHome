/* pages/index/activity.wxss */

/* @import "../wxParse/wxParse.wxss"; */

page {
  background: #f5f5f7;
}

.container .guangao {
  width: 100%;
  height: 300px;
}

.container .guangao image {
  width: 100%;
  height: 100%;
}

.container .catagory {
  height: 480rpx;
  padding: 0 24rpx;
  background: #fff;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.container .catagory .title {
  text-align: center;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #342b2b;
}

.container .catagory .floor_box {
  padding: 0 26rpx;
}

.container .catagory .p_box {
  padding-top: 4rpx;
}

.line {
  color: #707070;
}

.red {
  color: red;
}

.container .catagory .p_box .formitem {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 10px;
}

.container .catagory .p_box .formitem .tit {
  width: 50px;
}

.container .catagory .p_box .formitem input {
  width: 100%;
  height: 70rpx;
  background: #f2f2f2;
  margin-left: 8px;
  border-radius: 5px;
  border: 1px solid rgba(222, 219, 217, 1);
  padding-left: 20rpx;
}

.container .catagory .p_box button {
  width: 68%;
  height: 38px;
  line-height: 38px;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
  border-radius: 5px;
  font-size: 16px;
  margin-left: 58px;
  margin-top: 20px;
}

.notice_wrap {
  height: 60rpx;
  margin-top: 15px;
  text-align: center;
}

.container .swiper-vertical {
  width: 100%;
  float: left;
}

.container .swiper-vertical .slide-title {
  width: 20%;
  height: 60rpx;
  padding-left: 20rpx;
  float: left;
}

.container .swiper-vertical .slide-title image {
  width: 32rpx;
  height: 32rpx;
}

.container .swiper-vertical .swiper-info {
  width: 68%;
  height: 60rpx;
  float: left;
}

.container .swiper-vertical .swiper-info swiper {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #342b2b;
}

.container .fuwu image {
  width: 100%;
  height: 220rpx;
}

.container .floors {
  margin-bottom: 10px;
}

.remai {
  color: #342b2b;
  font-size: 13px;
}

.container .floors_box {
  width: 100%;
  height: 600rpx;
}

.container .floors_box .title {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  background: #fff;
}

.container .floors_box .title .right {
  font-size: 26rpx;
  font-weight: bold;
  color: #000;
}

.container .floors_box .item {
  width: 100%;
  height: 600rpx;
}

.container .floors .floors_box .item image {
  width: 105%;
  height: 100%;
  display: block;
}

.dc {
  color: #dc7f20;
}

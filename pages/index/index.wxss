/**index.wxss**/

page {
  background: #f5f5f7;
}

.container .swiper-slider image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.container .ui-grids {
  padding: 10rpx 0rpx 10rpx;
  background: #fff;
}

.container .ui-grids .grid {
  width: 130rpx;
  margin-right: 20rpx;
  float: left;
  text-align: center;
  margin-left: 15px;
}

.container .ui-grids .last-grid {
  margin-right: 0;
}

.container .ui-grids .ui_grid-img {
  height: 90rpx;
  margin: 0 auto;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .ui-grids .ui_grid-img image {
  width: 76rpx;
  height: 76rpx;
}

.container .ui-grids .ui_grid-label {
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.container .floor {
  height: 260rpx;
  padding: 0 24rpx;
  background: #fff;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.container .floor_box .title {
  height: 80rpx;
  line-height: 80rpx;
}

.container .floor_box .title .right {
  font-size: 20rpx;
  font-weight: bold;
}

/* .container .floor_box .item {
  overflow: hidden;
  float: left;
  box-sizing: border-box;
} */

.container .floor .list {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.container .floor .list .scrollBox {
  width: 100%;
  height: 150rpx;
  white-space: nowrap;
}

.container .floor .list .scrollBox .item {
  width: 330rpx;
  height: 150rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: inline-block;
  margin-left: 24rpx;
}

/* .container .floor .list .scrollBox .item:nth-child(even) {
  
} */

.container .floor .list .scrollBox .item image {
  width: 100%;
  height: 100%;
  display: block;
}

.remai {
  color: #342b2b;
  font-size: 13px;
}

.container .catagory {
  height: 200rpx;
  padding: 0 24rpx;
  background: #fff;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.container .catagory .title {
  text-align: center;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #342b2b;
}

.container .catagory .floor_box {
  padding: 0 26rpx;
}

.container .catagory .p_box {
  padding-top: 4rpx;
}

.line {
  color: #707070;
}

.red {
  color: red;
}

.container .catagory .p_box .formitem {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 10px;
}

.container .catagory .p_box .formitem .tit {
  width: 50px;
}

.container .catagory .p_box .formitem input {
  width: 100%;
  height: 70rpx;
  background: #f2f2f2;
  margin-left: 8px;
  border-radius: 5px;
  border: 1px solid rgba(222, 219, 217, 1);
  padding-left: 20rpx;
}

.container .catagory .p_box button {
  width: 68%;
  height: 38px;
  line-height: 38px;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
  border-radius: 5px;
  font-size: 16px;
  margin-left: 58px;
  margin-top: 20px;
}

.notice_wrap {
  height: 60rpx;
  margin-top: 15px;
  text-align: center;
}

.container .swiper-vertical {
  width: 100%;
  float: left;
}

.container .swiper-vertical .slide-title {
  width: 20%;
  height: 60rpx;
  padding-left: 20rpx;
  float: left;
}

.container .swiper-vertical .slide-title image {
  width: 32rpx;
  height: 32rpx;
}

.container .swiper-vertical .swiper-info {
  width: 68%;
  height: 60rpx;
  float: left;
}

.container .swiper-vertical .swiper-info swiper {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #342b2b;
}

.container .fuwu image {
  width: 100%;
  height: 220rpx;
}

.container .floors {
  margin-bottom: 10px;
}

.container .floors_box {
  width: 100%;
  height: 400rpx;
}

.container .floors_box .title {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  background: #fff;
}

.container .floors_box .title .right {
  font-size: 26rpx;
  font-weight: bold;
  color: #000;
}

.container .floors_box .item {
  width: 100%;
  height: 320rpx;
}

.container .floors .floors_box .item image {
  width: 105%;
  height: 100%;
  display: block;
}

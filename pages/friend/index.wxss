/* pages/friend/index.wxss */

page {
  background: #f5f5f7;
  width: 100%;
  overflow-x: hidden;
}

.container .headnav .headBg {
  width: 100%;
  height: 286rpx;
  background: #342b2b;
  text-align: center;
  color: #fff;
  padding-top: 45rpx;
}

.container .headnav .headBg .money {
  font-size: 78rpx;
  color: #dc7f20;
}

.container .headnav .headBg text {
  font-size: 24rpx;
}

.container .headnav .headBg .seedetail {
  width: 175rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background: #dc7f20;
  border-radius: 28rpx;
  font-size: 24rpx;
  margin: 15rpx auto;
}

/* 列表模块 */

.containers .wrapList {
  width: 100%;
  margin-bottom: 10rpx;
}

.containers .title {
  font-size: 26rpx;
  font-weight: bold;
  color: #342b2b;
  padding: 30rpx 0 18rpx 36rpx;
}

.containers .wrapList .list-item {
  width: 100%;
  /* height: 230rpx; */
  height: 140rpx;
  background: #fff;
  margin-bottom: 10rpx;
  padding-left: 38rpx;
  font-size: 26rpx;
}

.containers .wrapList .list-item image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  float: left;
  margin: 16rpx 0rpx;
}

.containers .wrapList .list-item .font-wrap {
  float: left;
  padding: 10rpx 16rpx;
  font-size: 24rpx;
  font-weight: blod;
}

.containers .wrapList .list-item .font-wrap>view {
  height: 42rpx;
  line-height: 42rpx;

}

.beizhu {
  float: right;
  margin-right: 50px;
  background: #dcdcdc;
  height: 38rpx !important;
  min-height: 38rpx !important;
  line-height: 38rpx !important;
  display: flex;
  align-items: center;
}
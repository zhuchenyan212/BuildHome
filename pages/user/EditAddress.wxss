/* pages/user/EditAddress.wxss */

page {
  background: #f5f5f7;
}

.container {
  width: 100%;
  height: auto;
}

.container .editwrap {
  width: 100%;
  height: 685rpx;
  background: #fff;
  padding-left: 54rpx;
  /* margin-top: 30rpx; */
}

.container .editwrap .itemedit {
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  border-bottom: 1px solid #f5f5f7;
}

.container .editwrap .itemedit text {
  float: left;
  color: #342b2b;
  font-size: 28rpx;
  font-weight: bolder;
}

.container .editwrap .itemedit input {
  float: left;
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-left: 100rpx;
}

switch {
  float: right;
  margin-right: 85rpx;
}

.picker {
  font-size: 28rpx;
  color: #8f8f8f;
  padding-left: 100rpx;
}

.bottom {
  padding: 10rpx;
  height: 100rpx;
  margin-top: 80rpx;
}

.bottom button {
  width: 46%;
  height: 76rpx;
  line-height: 76rpx;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
  text-align: center;
  border-radius: 10rpx;
  margin: 10rpx auto;
  font-size: 32rpx;
}

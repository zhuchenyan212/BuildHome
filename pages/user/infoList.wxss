/* pages/user/infoList.wxss */

page {
  background: #f5f5f7;
}

.container .wrapList {
  width: 100%;
  margin-top: 10rpx;
}

.container .wrapList .list-item {
  width: 100%;
  height: 175rpx;
  background: #fff;
  margin-bottom: 10rpx;
  padding-left: 38rpx;
}

.container .wrapList .list-item image {
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  float: left;
  margin: 24rpx 0rpx;
  border: 4rpx solid rgba(220, 127, 32, 1);
}

.container .wrapList .list-item .font-wrap {
  float: left;
  padding: 24rpx 24rpx;
  color: #dc7f20;
  font-size: 32rpx;
  line-height: 65rpx;
  font-weight: 550;
}

.container .wrapList .list-item .font-wrap .info {
  color: #342b2b;
  text-align: left;
}

.container .wrapList .list-item .infonum {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  background: red;
  font-size: 22rpx;
  color: #fff;
  float: right;
  text-align: center;
  margin-right: 20rpx;
  margin-top: 40rpx;
}

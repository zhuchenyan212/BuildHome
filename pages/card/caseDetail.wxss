/* pages/card/caseDetail.wxss */

page {
  background: #f5f5f7;
}

.container .wrap{
  width: 100%;
  padding-left: 36rpx;
  background: #fff;
  line-height: 46rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.container .wrap .info{
  color: #8F8F8F;
  font-size: 28rpx;
}

.container .imgwrap{
  width: 100%;
  padding-left: 32rpx;
  padding-right: 32rpx;
  background: #fff;
}

.container .imgwrap image{
  width: 92%;
  height: 298rpx;
}

.container .catagory {
  height: 480rpx;
  padding: 0 24rpx;
  background: #fff;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.container .catagory .title {
  text-align: center;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #342b2b;
}

.container .catagory .floor_box {
  padding: 0 26rpx;
}

.container .catagory .p_box {
  padding-top: 4rpx;
}

.line {
  color: #707070;
}

.red {
  color: red;
}

.container .catagory .p_box .formitem {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 10px;
}

.container .catagory .p_box .formitem .tit {
  width: 50px;
}

.container .catagory .p_box .formitem input {
  width: 100%;
  height: 70rpx;
  background: #f2f2f2;
  margin-left: 8px;
  border-radius: 5px;
  border: 1px solid rgba(222, 219, 217, 1);
}

.container .catagory .p_box button {
  width: 68%;
  height: 38px;
  line-height: 38px;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
  border-radius: 5px;
  font-size: 16px;
  margin-left: 58px;
  margin-top: 20px;
}

.notice_wrap {
  height: 60rpx;
  margin-top: 15px;
  text-align: center;
}

.container .swiper-vertical {
  width: 100%;
  float: left;
}

.container .swiper-vertical .slide-title {
  width: 20%;
  height: 60rpx;
  padding-left: 20rpx;
  float: left;
}

.container .swiper-vertical .slide-title image {
  width: 32rpx;
  height: 32rpx;
}

.container .swiper-vertical .swiper-info {
  width: 68%;
  height: 60rpx;
  float: left;
}

.container .swiper-vertical .swiper-info swiper {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #342b2b;
}

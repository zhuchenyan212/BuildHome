/* pages/order/detail.wxss */

page {
  background: #f5f5f7;
}

.container {
  margin-bottom: 120rpx;
}

.container .headnav .headBg {
  width: 100%;
  height: 245rpx;
  background: #342b2b;
  text-align: center;
  position: relative;
}

.container .headnav .headBg .orderstatus {
  color: #dc7f20;
  font-weight: blod;
  font-size: 40rpx;
  text-align: left;
  float: left;
  padding: 38rpx 0rpx 0rpx 50rpx;
}

.container .headnav .headBg image {
  width: 34rpx;
  height: 34rpx;
  float: left;
  margin-top: 48rpx;
  margin-left: 10rpx;
}

.container .headnav .carditem {
  width: 92.5%;
  height: 195rpx;
  background: #fff;
  position: absolute;
  top: 114rpx;
  left: 28rpx;
  border-radius: 10rpx;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
}

.container .headnav .carditem .font {
  margin: 30rpx 28rpx;
  color: #342b2b;
  font-size: 32rpx;
}

.orderbottom {
  height: 70rpx;
  padding-top: 8px;
}

.orderbottom > view {
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  float: right;
  border-radius: 10rpx;
}

.onButton {
  width: 120rpx;
  height: 52rpx;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
}

.offButton {
  width: 142rpx;
  height: 52rpx;
  color: #8F8F8F;
  border: 2rpx solid #8F8F8F;
  opacity: 1;
}

.space {
  margin-right: 22rpx;
}

/* 选中地址 */

.cart_container {
  display: flex;
  flex-direction: row;
  height: 148rpx;
  background: #fff;
  margin: 90rpx 30rpx 12rpx 30rpx;
  position: relative;
}

.cart_container .adressFont {
  line-height: 50rpx;
  padding-top: 30rpx;
  padding-left: 20rpx;
}

.cart_container .adressFont .addresInfo {
  font-weight: bold;
  color: #342b2b;
  font-size: 28rpx;
}

.cart_container .adressFont .addressuser {
  color: #8f8f8f;
  font-size: 24rpx;
}

.cart_container .adressFont .addresInfo .lable {
  display: inline-block;
  width: 70rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
  border-radius: 10rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
}

.cart_container .edit {
  float: right;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.cart_container .edit image {
  width: 29rpx;
  height: 29rpx;
}


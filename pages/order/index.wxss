/* pages/order/index.wxss */

page {
  background: #f5f5f7;
  height: 100%;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 97rpx;
  line-height: 97rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background: #fff;
  color: #8f8f8f;
  font-size: 28rpx;
  border-bottom: 1px solid #f3f3f3;
}

.swiper-tab-item {
  width: 20%;
}

.active {
  color: #342b2b;
  font-size: 28rpx;
  font-weight: bold;
  border-bottom: 2px solid #dc7f20;
}

.orderItem {
  margin-left: 26rpx;
  margin-right: 26rpx;
  color: #a4a4a4;
  background: #fff;
  margin-bottom: 24rpx;
  margin-top: 24rpx;
}

.orderNav {
  height: 76rpx;
  line-height: 76rpx;
  color: #777;
  padding-left: 28rpx;
  padding-right: 28rpx;
  background: #fff;
  border-bottom: 1px solid #ebebeb;
}

.orderNav .left {
  color: #8f8f8f;
  font-size: 24rpx;
}

.orderNav .right {
  color: #dc7f20;
  font-size: 28rpx;
}

.Productitem {
  padding: 15rpx 30rpx;
}

.Productitem .left .proImg {
  width: 97rpx;
  height: 97rpx;
  float: left;
}

.Productitem .left .proImg {
  width: 97rpx;
  height: 97rpx;
  float: left;
}

.Productitem .left .profot {
  margin-left: 110rpx;
}

.Productitem .left .profot .proName {
  color: #342b2b;
  font-size: 28rpx;
}

.Productitem .left .profot .proNum {
  color: #8f8f8f;
  font-size: 24rpx;
}

.Productitem .proPrice {
  font-size: 26rpx;
  color: #dc7f20;
}

.orderItem .orderAll {
  line-height: 50rpx;
  text-align: left;
  font-size: 24rpx;
  color: #8f8f8f;
  padding-left: 28rpx;
}

.orderItem .orderAll text {
  font-size: 28rpx;
  color: #342b2b;
}

.orderItem .orderbottom {
  height: 70rpx;
}

.orderItem .orderbottom > view {
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  float: right;
  border-radius: 10rpx;
}

.onButton {
  width: 120rpx;
  height: 52rpx;
  color: #fff;
  background: rgba(220, 127, 32, 1);
  opacity: 1;
}

.offButton {
  width: 142rpx;
  height: 52rpx;
  border: 2rpx solid rgba(143, 143, 143, 1);
  opacity: 1;
}

.space {
  margin-right: 22rpx;
}
